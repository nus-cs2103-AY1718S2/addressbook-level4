<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.141">
  <WebView fx:id="browser" />
   <HBox id="cardPane" fx:id="cardPane">
      <children>
         <GridPane HBox.hgrow="ALWAYS">
            <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
            </columnConstraints>
            <children>
               <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
                  <padding>
                     <Insets bottom="5" left="15" right="5" top="5" />
                  </padding>
                  <children>
                     <HBox alignment="CENTER_LEFT" spacing="5">
                        <children>
                           <Label fx:id="name" styleClass="cell_big_label" textFill="WHITE">
                              <font>
                                 <Font name="Segoe UI" size="12.0" />
                              </font>
                           </Label>
                        </children>
                     </HBox>
                     <FlowPane fx:id="tags" />
                     <Label fx:id="nric" styleClass="cell_small_label" textFill="WHITE" />
                     <Label fx:id="phone" styleClass="cell_small_label" textFill="WHITE">
                        <font>
                           <Font name="Segoe UI" size="12.0" />
                        </font>
                     </Label>
                     <Label fx:id="address" styleClass="cell_small_label" textFill="WHITE">
                        <font>
                           <Font name="Segoe UI" size="12.0" />
                        </font>
                     </Label>
                     <Label fx:id="dob" styleClass="cell_small_label" textFill="WHITE">
                        <font>
                           <Font name="Segoe UI" size="12.0" />
                        </font>
                     </Label>
                     <Label fx:id="bloodType" styleClass="cell_small_label" textFill="WHITE">
                        <font>
                           <Font name="Segoe UI" size="12.0" />
                        </font>
                     </Label>
                     <Label fx:id="email" styleClass="cell_small_label" textFill="WHITE">
                        <font>
                           <Font name="Segoe UI" size="12.0" />
                        </font>
                     </Label>
                     <Label fx:id="remark" styleClass="cell_small_label" textFill="WHITE">
                        <font>
                           <Font name="Segoe UI" size="12.0" />
                        </font>
                     </Label>
                     <Label fx:id="recordList" styleClass="cell_small_label" textFill="WHITE">
                        <font>
                           <Font name="Segoe UI" size="12.0" />
                        </font>
                     </Label>
                  </children>
               </VBox>
            </children>
            <rowConstraints>
               <RowConstraints />
            </rowConstraints>
         </GridPane>
      </children>
   </HBox>
</StackPane>
