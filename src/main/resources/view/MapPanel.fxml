<?import com.lynden.gmapsfx.GoogleMapView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <GoogleMapView fx:id="mapView" prefHeight="-1.0" prefWidth="-1.0" />
    <Pane fx:id="invalidAddressOverlay" prefHeight="200.0" prefWidth="300.0" stylesheets="@Extensions.css">
      <StackPane.margin>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </StackPane.margin>
      <children>
        <Label id="invalidAddressMsg" prefHeight="-1.0" prefWidth="-1.0" translateX="25" translateY="40"
               stylesheets="@Extensions.css" text="Address cannot be found on Google Maps" wrapText="true">
          <font>
            <Font size="13.0" />
          </font>
        </Label>
      </children>
    </Pane>
  </children>
</StackPane>
